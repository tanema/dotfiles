[general]
ui = TTY.TTYUI
accounts = personal, timanema
pythonfile=~/.mutt/keychain_pass.py
fsync = False

[Account personal]
localrepository = personal-Local
remoterepository = personal-Remote
status_backend = sqlite
postsynchook = notmuch new
[Repository personal-Local]
type = Maildir
localfolders = ~/Mail/gmail.com
[Repository personal-Remote]
maxconnections = 1
type = Gmail
remoteuser = timanema@gmail.com
remotepasseval = get_keychain_pass(account="timanema@gmail.com", server="imap.gmail.com")
realdelete = no

[Account timanema]
localrepository = timanema-Local
remoterepository = timanema-Remote
status_backend = sqlite
postsynchook = notmuch new
[Repository timanema-Local]
type = Maildir
localfolders = ~/Mail/timanema.com
[Repository timanema-Remote]
maxconnections = 1
type = Gmail
remoteuser = me@timanema.com
remotepasseval = get_keychain_pass(account="me@timanema.com", server="imap.gmail.com")
realdelete = no
